<body>

    <button id="orderButton">
        üõí –ó–∞–∫–∞–∑–∞—Ç—å –µ–¥—É —Å–µ–π—á–∞—Å!
    </button>
    
    <div id="statusMessage">–ù–∞–∂–º–∏—Ç–µ, —á—Ç–æ–±—ã –æ—Ñ–æ—Ä–º–∏—Ç—å –∑–∞–∫–∞–∑.</div>

    <script>
        // --- JAVASCRIPT: –õ–æ–≥–∏–∫–∞ –∫–Ω–æ–ø–∫–∏ ---
        
        // –ü–æ–ª—É—á–∞–µ–º —Å—Å—ã–ª–∫—É –Ω–∞ –∫–Ω–æ–ø–∫—É –∏ —ç–ª–µ–º–µ–Ω—Ç —Å–æ–æ–±—â–µ–Ω–∏—è
        const orderButton = document.getElementById('orderButton');
        const statusMessage = document.getElementById('statusMessage');

        // –ò–º–∏—Ç–∞—Ü–∏—è –¥–∞–Ω–Ω—ã—Ö –æ –∑–∞–∫–∞–∑–µ
        const currentOrder = {
            item: "–ü–∏—Ü—Ü–∞ '–ú–∞—Ä–≥–∞—Ä–∏—Ç–∞'",
            quantity: 1,
            total: 550, // –°—Ç–æ–∏–º–æ—Å—Ç—å –≤ —Ä—É–±–ª—è—Ö/–≥—Ä–∏–≤–Ω–∞—Ö/—Ç–Ω–≥
            deliveryTime: randomTime(25, 45) // –°–ª—É—á–∞–π–Ω–æ–µ –≤—Ä–µ–º—è –¥–æ—Å—Ç–∞–≤–∫–∏
        };

        // –í—Å–ø–æ–º–æ–≥–∞—Ç–µ–ª—å–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è –¥–ª—è –≥–µ–Ω–µ—Ä–∞—Ü–∏–∏ —Å–ª—É—á–∞–π–Ω–æ–≥–æ –≤—Ä–µ–º–µ–Ω–∏
        function randomTime(min, max) {
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }

        // –û—Å–Ω–æ–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è, –≤—ã–ø–æ–ª–Ω—è—é—â–∞—è—Å—è –ø—Ä–∏ –∫–ª–∏–∫–µ
        function handleOrderClick() {
            // 1. –ë–ª–æ–∫–∏—Ä—É–µ–º –∫–Ω–æ–ø–∫—É, —á—Ç–æ–±—ã –ø—Ä–µ–¥–æ—Ç–≤—Ä–∞—Ç–∏—Ç—å –¥–≤–æ–π–Ω–æ–π –∫–ª–∏–∫
            orderButton.disabled = true;
            orderButton.textContent = '–û–±—Ä–∞–±–æ—Ç–∫–∞ –∑–∞–∫–∞–∑–∞...';
            statusMessage.style.color = '#ff5722';

            // 2. –ò–º–∏—Ç–∞—Ü–∏—è –∞—Å–∏–Ω—Ö—Ä–æ–Ω–Ω–æ–π –æ—Ç–ø—Ä–∞–≤–∫–∏ –∑–∞–∫–∞–∑–∞ –Ω–∞ —Å–µ—Ä–≤–µ—Ä (–∑–∞–¥–µ—Ä–∂–∫–∞ 2 —Å–µ–∫—É–Ω–¥—ã)
            setTimeout(() => {
                
                // 3. –í—ã–≤–æ–¥ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞ –ø–æ—Å–ª–µ "–æ—Ç–ø—Ä–∞–≤–∫–∏"
                statusMessage.innerHTML = `‚úÖ **–ó–∞–∫–∞–∑ –ø—Ä–∏–Ω—è—Ç!** ${currentOrder.item} (${currentOrder.quantity} —à—Ç.)<br>
                                          –°—É–º–º–∞: ${currentOrder.total} –µ–¥.<br>
                                          –û–∂–∏–¥–∞–µ–º–æ–µ –≤—Ä–µ–º—è –¥–æ—Å—Ç–∞–≤–∫–∏: ${currentOrder.deliveryTime} –º–∏–Ω—É—Ç.`;
                
                statusMessage.style.color = '#4CAF50'; // –ó–µ–ª–µ–Ω—ã–π —Ü–≤–µ—Ç —É—Å–ø–µ—Ö–∞
                orderButton.textContent = '–ó–∞–∫–∞–∑ –æ—Ñ–æ—Ä–º–ª–µ–Ω';

            }, 2000); // 2000 –º–∏–ª–ª–∏—Å–µ–∫—É–Ω–¥ = 2 —Å–µ–∫—É–Ω–¥—ã
        }

        // –ü—Ä–∏–≤—è–∑—ã–≤–∞–µ–º —Ñ—É–Ω–∫—Ü–∏—é –∫ —Å–æ–±—ã—Ç–∏—é –∫–ª–∏–∫–∞
        orderButton.addEventListener('click', handleOrderClick);

    </script>

